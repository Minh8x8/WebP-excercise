{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.Description }}</td>
            </tr>
            <tr>
                <td><b>Product</b></td>
                <td>
                    {% for product in category.products %}
                        {{ product.Name }},
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}"><button class="btn btn-outline-primary">back to list</button></a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><button class="btn btn-outline-primary">edit</button></a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
